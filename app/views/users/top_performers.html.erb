<h1> Top Power Minuters </h1>

<table class = "table table-hover">
  <tr>
    <th class="table-header" style="font-weight: bold">Rank</th>
    <th class="table-header" style="font-weight: bold">Name</th>
    <th>All Time</th>
    <th class="table-header" style="font-weight: bold">Favorite Workout</th>
  </tr>
  <% @top_users.each_with_index do |user,index| %>
    <% if index == 0 %>
      <tr style="background: gold">
    <% elsif index == 1 %>
      <tr style="background: silver">
    <% elsif index == 2 %>
      <tr style="background: #BD7F22">
    <% elsif user.id == current_user.id %>
      <tr class="bg-success">
    <% else %>
      <tr>
    <% end %>
        <td> <%= index + 1 %> </td>
        <td><%= user.first_name %><% if index == 0 %> <i class="fa fa-trophy"></i> <% end %></td>
        <td><%= user.workouts.length %> </td>
        <td><%= user.sort_most_common_workouts(1000).first[0] %> </td>
      </tr>
  <% end %>
</table>
