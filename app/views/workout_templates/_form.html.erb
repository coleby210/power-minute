<%= form_for @workout_template do |f| %>
  <div class="field">
    <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
  </div>
  <br>

  <div class="field">
    <%= f.text_field :description, placeholder: "Workout description", class: "form-control" %>
  </div>
  <br>

  <div class="field">
    <%= f.text_field :image, placeholder: "Image link (optional)", class: "form-control" %>
  </div>
  <br>

  <h4>Which category does your workout belong to:</h4>
  <div class="field radio">
    <input type="radio" name="category" value="Power"> Power <br>
    <input type="radio" name="category" value="Cardio"> Cardio <br>
    <input type="radio" name="category" value="Yoga"> Yoga <br>
  </div>

  <h4>Would you like your workout to be:</h4>
  <div class="field radio">
    <input type="radio" name="private_status" value="false"> Public <br>
    <input type="radio" name="private_status" value="true"> Private <br>
  </div>

  <h4>Would you like to add this workout to your favorites:</h4>
  <div class="field radio">
    <input type="radio" name="favorite_status" value="true"> Yes <br>
    <input type="radio" name="favorite_status" value="false"> No <br>
  </div>

  <div class="actions">
    <%= f.submit "Create new workout", class: "btn btn-success" %>
  </div>




<% end %>
